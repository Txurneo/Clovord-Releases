{
    "name": "clovord-desktop",
    "productName": "Clovord",
    "version": "0.1.37",
    "description": "Clovord desktop application built with Electron.",
    "main": "main.js",
    "author": "Clovord",
    "license": "Proprietary",
    "scripts": {
        "start": "electron .",
        "dev": "electron .",
        "prepare-icons": "node scripts/prepare-icons.js",
        "build": "npm run prepare-icons && electron-builder --publish never",
        "publish": "npm run prepare-icons && electron-builder --publish always"
    },
    "dependencies": {
        "electron-updater": "^6.6.2",
        "mime-types": "^2.1.35"
    },
    "devDependencies": {
        "electron": "^39.2.6",
        "electron-builder": "^26.0.12",
        "png-to-ico": "^3.0.1"
    },
    "build": {
        "appId": "com.clovord.desktop",
        "productName": "Clovord",
        "directories": {
            "output": "dist",
            "buildResources": "resources"
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "../web/clovord.com",
                "to": "app-web"
            },
            {
                "from": "resources/app.ico",
                "to": "app.ico"
            }
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "Txurneo",
                "repo": "Clovord-Releases",
                "releaseType": "release"
            }
        ],
        "win": {
            "target": "nsis",
            "artifactName": "${productName}-Setup-${version}.${ext}",
            "icon": "resources/app.ico"
        },
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "maintainer": "Clovord"
        }
    }
}